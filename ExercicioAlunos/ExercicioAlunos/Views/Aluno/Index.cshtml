
@{
    Layout = "~/Views/Shared/Master.cshtml";
}


<body class="bg-success">



    <div class="pt-4 text-center text-white">
        <h1>LISTA DE ALUNOS</h1>
    </div>

    <div class="border pt-4">
        <div class="offset-10">
            @Html.ActionLink("Novo Aluno", "Cadastro", "Recrutadora", new { @class = "btn btn-outline-danger float right mr-2" })
        </div>



        <div class="mr-3 ml-3 text-white">
            <table class="table table-striped table-hover border">
                <thead>

                    <tr class="bg-secondary text-white">
                        <th>ID</th>
                        <th>NOME</th>
                        <th>MATRICULA</th>
                        <th>NOTA 1</th>
                        <th>NOTA 2</th>
                        <th>NOTA 3</th>
                        <th>FREQUENCIA</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ExercicioAlunos.Models.Aluno aluno in @ViewBag.Alunos)
                    {
                        <tr>
                            <td>@aluno.Id</td>
                            <td>@aluno.Nome</td>
                            <td>@aluno.Matricula</td>
                            <td>@aluno.Nota_1</td>
                            <td>@aluno.Nota_2</td>
                            <td>@aluno.Nota_3</td>
                            <td>@aluno.Frequencia</td>
                            <td>
                                <a href="/Aluno/Editar?id=@aluno.Id"
                                   class="btn btn-outline-success">
                                    Editar
                                </a>
                                <a href="/Aluno/Excluir?id=@aluno.Id"
                                   class="btn btn-outline-danger">
                                    Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</body>


